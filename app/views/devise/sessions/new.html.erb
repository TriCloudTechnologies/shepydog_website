<div style="background-color: rgb(32, 36, 40);">
  <%= render partial: "shared/home/navbar" %>

  <%= stylesheet_link_tag "home/heroSection", media: "all" %>

  <div class="container">
     <div class="row">
      <div class="col-6 d-flex justify-content-center align-items-center flex-column py-5">
        <%= image_tag "logo.png", class: "img-fluid hero-img" %>
        <h1 class="h1-64">Shepydogs</h1>
        <h1 id="comingSoonText" class="text-white mt-4 fs-2">COMING SOON</h1>
        <div class="box-download mt-5">
           <div class="fs-5 text-white text-center">DOWNLOAD APP NOW</div>
           <div class="box-img-store mt-2">
              <a href="#" class="d-inline-block me-2">
                <%= image_tag "google-play-store-btn.svg", class: "img-store img-fluid", loading: "lazy" %>
              </a>
              <a href="#" class="d-inline-block">
                <%= image_tag "app-store-btn.svg", class: "img-store img-fluid", loading: "lazy" %>
              </a>
           </div>
        </div>
      </div>
      <div class="col-6 d-flex justify-content-center align-items-center flex-column">
        <h2 class="text-white">Log in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
           <div class="field">
            <%= f.label :email, class: "form-label text-white" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field mt-4">
            <%= f.label :password, class: "form-label text-white" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field mt-4">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: "form-label text-white" %>
            </div>
          <% end %>

          <div class="actions mt-4 d-flex justify-content-center">
            <%= f.submit "Log in", class: "btn btn-primary getAppBtn border-0" %>
          </div>
        <% end %>

        <%# render "devise/shared/links" %>
      </div>
    </div>
  </div>
  <%= render partial: "shared/home/footer" %>
</div>
